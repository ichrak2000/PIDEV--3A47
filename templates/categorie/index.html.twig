{% extends 'baseBack.html.twig' %}

{% block title %}Categories List{% endblock %}

{% block contentblock %}
    <h1 align='center'>Categories List</h1>
    <div align='center'>
        <a href="{{ path('app_categorie_new') }}">
            <button type="button" class="btn btn-primary btn-rounded btn-icon"> Create New Category </button>
        </a>
    </div>

    <div class="table-responsive">
        <table class="table">
            <thead>
                <tr>
                    <th>Actions</th>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Service Associated</th>
                    <th>Date de cr√©ation</th>
                    <th>Image Path</th>
                </tr>
            </thead>
            <tbody>
                {% for categorie in categories %}
                    <tr>
                        <td>
                            <a href="{{ path('app_categorie_show', {'id': categorie.id}) }}">
                                <button type="button" class="btn btn-primary btn-rounded btn-fw">Show</button>
                            </a>
                            <br><br>
                            <a href="{{ path('app_categorie_edit', {'id': categorie.id}) }}">
                                <button type="button" class="btn btn-warning btn-rounded btn-fw">Edit</button>
                            </a>
                        </td>
                        <td>{{ categorie.name }}</td>
                        <td>{{ categorie.description }}</td>
                        <td>{{ categorie.serviceAssocie }}</td>
                        <td>{{ categorie.dateDeCreation ? categorie.dateDeCreation|date('Y-m-d') : '' }}</td>
                       <td><img src="{{ asset('' ~ categorie.ImagePath) }}" alt="Categorie Image"></td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="6">No records found</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
